{
  "check-coverage": true,
  "per-file": true,
  "statements": 85,
  "branches": 80,
  "functions": 85,
  "lines": 85,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "extension": [
    ".ts"
  ],
  "require": [
    "ts-node/register"
  ],
  "reporter": [
    "text-summary",
    "html",
    "lcov"
  ],
  "sourceMap": true,
  "instrument": true,
  "report-dir": "./coverage"
}
